---
import Wrapper from "../Wrapper.astro";
import Card from "../Card/Card.astro";
import projectsData from "./data.json";
---

<Fragment>
  <main class="loader">
    <Wrapper>
      <div class="title-content">
        <h1 id="title1">DIEGO</h1>
        <h1 id="title2"><span id="yellow-dot">&times;</span>CANO</h1>
        <div id="subtitle-content">
          <h2 id="subtitle">Geek of robust & simple development</h2>
        </div>
      </div>
      <Card data={projectsData} />
    </Wrapper>
  </main>
</Fragment>

<style>
  .loader {
    height: 100vh;
    width: 100vw;
  }
  #title1,
  #title2,
  #subtitle,
  #yellow-dot {
    opacity: 0;
  }
  #title2 {
    transform: translateY(-40px);
  }
  .title-content {
    position: relative;
    display: flex;
    flex-direction: column;
    text-align: center;
  }
</style>

<script>
  import { introAnimation } from "./introAnimation";
  introAnimation();
</script>
